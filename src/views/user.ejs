<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đặt cơm CG</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <%- include('header') -%>
    <h1 class="admin-header">User Dashboard</h1>
    <div class="row">
      <div class="col-sm-4 admin-left">
        <a href="/user" class="btn btn-primary btn-admin"
          >Xem chi tiết giao dịch</a
        >
        <a href="/user/editpassword" class="btn btn-primary btn-admin"
          >Đổi mật khẩu</a
        >
      </div>
      <div class="col-sm-8 admin-right">
        <table class="table table-striped">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Món</th>
            <th scope="col">Ngày đặt</th>
            <th scope="col">Trạng thái</th>
            <th scope="col" colspan="2">&nbsp;</th>
          </tr>
          </thead>
          <tbody>
          <% data.forEach((item, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td>
                <% item.foods.forEach(food => { %>
                  <p>
                    <%= food.quantity %> x  <%= food.food.name %>
                  </p>
                <% }) %>
              </td>
              <td><%= item.createAt.toLocaleString() %></td>
              <td><%= (item.status == "success"  ? "Đang đợi giao": "Đã giao")%></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          <% }) %>
          </tbody>
        </table>

      </div>
    </div>
  </body>
</html>
