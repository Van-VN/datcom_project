<!-- giới thiệu sản phẩm mới -->
<div class=" bg-new">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            <% for(let i = 0 ; i < 4; i++){ %>
                    <div class="carousel-item  <% if (i === 0){ %> active<% } %>">
                        <div class="row setting">
                            <div class="col-md-4"></div>
                            <div class="col-md-4 content">
                                <span class="new">New</span>
                                <p class="title-new"><%= product[i].name %></p>
                                <p class="information"><%= product[i].description %></p>
                                <a href="/product?id=<%= product[i].id %>">
                                    <button type="button" class="btn btn-primary buy">$<%= product[i].price %> | Mua ngay
                                    </button>
                                </a>

                            </div>
                            <div class="col-md-4 img-1">
                                <a href="/product?id=<%= product[i].id %>">
                                    <img border="0"
                                         src="<%= images.imageUrl %>"
                                         width="550" height="374" class="d-block w-500 " alt="1">
                                </a>
                            </div>
                        </div>
                    </div>
            <% } %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <i class="fas fa-chevron-left"></i>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>

</div>
<div class="container border-top rv">
